.flex {
  display: flex;
}
.flex-1 {
  flex: 1;
}
.flex-x {
  flex-direction: row;
}
.flex-y {
  flex-direction: column;
}

/* 左右顶格 上下居中对齐 */
.flex-x-sb {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.flex-x-cc {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.flex-x-lc {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.flex-x-rc {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}
.flex-y-sb {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}
