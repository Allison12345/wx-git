<!-- @format -->
<view>
  <view class="top" id="top"></view>
  <language-cells-top
    chooseItems="{{ chooseItems }}"
    bind:onDeleteItem="onDeleteItem"
  ></language-cells-top>
  <language-cells
    wx:for="{{ laguagesItems }}"
    wx:key="index"
    label="{{ item.label }}"
    word="{{ item.word }}"
    bind:onChooseItem="onChooseItem"
    id="{{ item.word }}"
  ></language-cells>
  <language-cells-side
    wordItems="{{ wordItems }}"
    bind:moveToItem="moveToItem"
  ></language-cells-side>
</view>
